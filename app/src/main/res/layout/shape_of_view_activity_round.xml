<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.github.florent37.shapeofview.sample.io.github.florent37.shapeofview.sample.ShapeOfViewMainActivity">

        <io.github.yehiareda.shapecontainer.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:shape_arc_height="30dp"
            app:shape_arc_position="bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/shape_of_view" />

        </io.github.yehiareda.shapecontainer.shapes.ArcView>

        <io.github.yehiareda.shapecontainer.shapes.CircleView
            android:id="@+id/circle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-90dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp"
            app:shape_circle_borderColor="@android:color/black"
            app:shape_circle_borderWidth="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/edsheeran" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="25dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowRadius="10"
                android:text="Circle"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold" />

        </io.github.yehiareda.shapecontainer.shapes.CircleView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

